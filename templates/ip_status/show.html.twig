{% extends 'base.html.twig' %}

{% block title %}Ip - {{ipStatus.ip}}{% endblock %}

{% block body %}

    <h1>Url Info</h1>
    <div class="{{ipStatus.status == true? 'text-white border-success ' : 'text-white border-secondary '}}card m-2 p-2 bg-transparent flex-fill">
        <div class="card-body">
            <h5 class="card-title">
                {% if ipStatus.status == 1 %}
                    <p class="text-success">Online <i class="bi bi-wifi"></i></p>
                {% else %}
                    <p class="text-success">Offline <i class="bi bi-wifi-off"></i></p>
                {% endif %}
            </h5>
            <p class="card-text">{{ipStatus.ip}}</p>
                {% if ipStatus.lastping %}
                    <p class="text-secondary">Last check {{ipStatus.lastping|date('d/m/Y')}}</p>
                    <p class="text-secondary">HTTP response status code is {{ipStatus.httpresponse}}</p>
                {% else %}
                    <p class="text-secondary">Never Checked</p>
                {% endif %}
            <div class="d-flex flex-row">
                <a href="{{path('app_ip_status')}}" class="btn btn-secondary m-2">Home</a>
                <a href="{{path('app_ip_status_edit', {ipStatus:ipStatus.id})}}" class="btn btn-warning m-2">Edit</a>
                <a href="{{path('app_ip_status_delete', {ipStatus:ipStatus.id})}}" class="btn btn-danger m-2">Delete</a>
            </div>
        </div>

{% endblock %}